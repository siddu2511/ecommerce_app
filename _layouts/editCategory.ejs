<section class="contact">
    <h1 class="center">Edit Category</h1>
    <a href="/admin/categories"> <button class="submit"> Back to all categories</button> </a>
    
    <div class="contact-box">
        <form action="/admin/categories/edit-category/<%= id %>" method="POST">
            <%- messages('messages', locals) %>
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<%= title %>" placeholder="Enter title">
            </div>
            <div class="form-group">
                <button class="btn" type="submit">submit</button>
            </div>
        </form>
    </div>
</section>

<% if(errors) {%>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.mag %>
        </div>
        <% });%>
            <% }%>