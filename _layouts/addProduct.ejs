<section class="contact">
    <h1 class="center">Add Product</h1>
    <a href="/admin/products"> <button class="submit"> Back to all Products</button> </a>
    
    <div class="contact-box">
        <form action="/admin/products/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<%= title %>"  placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="desc">Description:</label>
                <textarea  name="desc" id="desc"  cols="30" rows="10"> <%= desc %> </textarea>
            </div>
            <div class="form-group">
                <label for="content">Category:</label>
                <select name="category">
                    <% categories.forEach(function(cat){ %>
                        <option value="<%= cat.slug %>"> <%= cat.title %> </option>
                    <%}); %>
                </select>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" name="price" id="price" value="<%= price %>"  placeholder="Enter price">
            </div>
            <div class="form-group">
                <label for="image">Image:</label>
                <input type="file" name="image" id="img" >
                <img src="" alt=""  id="imgPreview">
            </div>
            <div class="form-group">
                <button class="btn" type="submit">submit</button>
            </div>
        </form>
    </div>
</section>

<% if(errors) {%>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger">
            <%= error.mag %>
        </div>
        <% });%>
            <% }%>